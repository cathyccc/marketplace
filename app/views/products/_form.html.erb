<%= form_for @product do |f| %>

  <% if @product.errors.any? %>
    <%= pluralize(@product.errors.count,"error") %> prevented you from saving.
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
  </div>
  <div>
    <%= f.label :product_image %>
    <%= f.file_field :product_image %>
  </div>
  <div class = "form-submit">
    <%= f.submit %>
  </div>
<% end %>
