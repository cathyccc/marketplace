<h2><%= @product.name %></h2>

<p>
  Item Description: <%= @product.description %><br>
  Price (cents): <%= @product.price_in_cents %>
</p>

<% if current_user %>
  <div>
    <%= link_to 'Edit', edit_product_path %> |
    <%= link_to 'Delete', product_path, data: {confirm: "Are you sure you want to remove this item?"}, method: :delete %>
  </div>
<% end %>

<h3>Reviews</h3>
<% if @product.reviews.count == 0 %>
  <p><em>There are currently no reviews.</em></p>
<% else %>
    <% @product.reviews.each do |review| %>
      <p>
        <%= review.review_text %>
        <%= link_to "delete", product_review_path(@product,review.id), method: :delete %>
      </p>
    <% end %>
<% end %>

<% if current_user %>
  <div>
    <%= form_for ([@product,@review]) do |f| %>

      <% if @review.errors.any? %>
        <%= pluralize(@review.errors.count,"error") %> prevented you from saving.
        <ul>
          <% @review.errors.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <div>
        <%= f.label :review_text %><br>
        <%= f.text_area :review_text %><br>
        <%= f.submit "Submit Review" %>
      </div>
    <% end %>
  </div>
<% end %>
